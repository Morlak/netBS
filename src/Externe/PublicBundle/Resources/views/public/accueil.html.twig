{% extends 'ExternePublicBundle::layout.html.twig '%}

{% block title %}Accueil{% endblock %}

{% block body %}
    
    <div class="row">
        
        <div class="col-lg-12">
            
            <div id="home-panel">
                
                <blockquote>
                    <p>Le bonheur ne vient pas à ceux qui l'attendent assis.</p>
                    <footer>Baden Powell</footer>
                </blockquote>
                
            </div>
            
        </div>
        
