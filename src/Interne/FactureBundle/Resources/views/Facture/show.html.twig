{% extends "InterneHomeBundle::layout.html.twig" %}

{% block title %}Détail de la facture{% endblock %}

{% block body %}


<div class="row">

    <div class="col-lg-6">
            <div class="widget">

                <div class="widget-title">
                    <span>Détail de la facture</span>
                </div>

                <div class="widget-content">
                    <div class="widget-data">
                        Numéro de Référance (id): {{ facture.id }}<br>

                        Titre: {{ facture.titre }}<br>

                        Remarque: {{ facture.remarque }}<br>

                        Montant émis: {{ facture.montantEmis }}<br>

                        Montant Reçu: {{ facture.montantRecu }}<br>

                        Statut: {{ facture.statut }}<br>

                        RAPPEL: <br>


                        {% for rappel in facture.rappels %}

                            {{ rappel.date|date("m/d/Y") }}
                            {{ rappel.frais }}<br>

                        {% endfor %}
                    </div>



                </div>
            </div>
    </div>



    {% endblock %}

    {% block javascript %}

    <script type="text/javascript">


    </script>

{% endblock %}